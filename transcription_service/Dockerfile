FROM python:3.10-slim
WORKDIR /app
COPY requirements*.txt ./
RUN apt-get update && apt-get install -y build-essential g++ && pip install --no-cache-dir -r requirements_core.txt
RUN apt install -y ffmpeg
RUN pip install --no-cache-dir -r requirements.txt
COPY . .
EXPOSE 5001
CMD ["python", "app.py"]
